<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/name_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TOPPINGS"
        android:textSize="20sp"
        />

    <CheckBox
        android:id="@+id/whipped_cream_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Whipped Cream"
        />
    <CheckBox
        android:id="@+id/chocolate_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chocolate"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/minus_id"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_horizontal_rule_24" />

        <TextView
            android:id="@+id/quantity_TV"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textAlignment="center" />

        <ImageButton
            android:id="@+id/plus_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_add_24" />


    </LinearLayout>

    <TextView
        android:id="@+id/order_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ORDER SUMMARY"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/name_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name : "
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/whipped_cream_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add whipped cream?false"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/chocolate_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add chocolate?false"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/total_quantity_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantity : "
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/total_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total : "
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/thank_you_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thank You"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/order_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="ORDER"
        />

</LinearLayout>